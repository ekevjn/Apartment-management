<%= form_tag send(path), :method => 'get',
      :id => "towers_search", class: "form-group" do %>
<div class="row">
  <div class="col-lg-12">
      <!-- Search box -->
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control",
            :placeholder => "Tìm kiếm...", :id => "search_input" %>
       <div class="input-group-btn" data-toggle="tooltip" title="Search">
         <button class="btn btn-default" type="submit">
           <i class="glyphicon glyphicon-search"></i>
         </button>
       </div>
      </div>
      <!-- Search box -->
    </div>
  </div>
  <br>
  <div class="row">
    <!-- Filter box -->
    <div class="col-md-4">
      <div class="ui floating labeled icon dropdown button" id="dropdown-filter">
        <i class="filter icon"></i>
        <span class="text">Lọc</span>
        <div class="menu">
          <div class="header">
            <i class="tags icon"></i>
            Lọc theo tag
          </div>
          <div class="divider"></div>
          <div class="item">
            <i class="blue circle icon"></i>
            <%= filterable "all", type %>
          </div>
          <div class="item">
            <i class="green circle icon"></i>
            <%= filterable "active", type %>
          </div>
          <div class="item">
            <i class="red circle icon"></i>
            <%= filterable "deactive", type %>
          </div>
        </div>
      </div>
    </div>
    <!-- Filter box -->

    <!-- Template to export button -->
    <div class="col-md-2 col-md-offset-2" data-toggle="tooltip" title="Mẫu để import">
      <%= link_to send(export_path, { :format => 'xls' }), class: "ui labeled icon orange button" do %>
      <i class="arrow circle newspaper icon "></i>Template
      <% end %>
    </div>
    <!-- Template to export button -->

    <!-- Import button -->
    <div class="col-md-2" data-toggle="tooltip" title="Import từ excel">
      <button class="ui labeled icon blue button" type="button" data-toggle="collapse" data-target="#collapseImport" aria-expanded="false"  aria-controls="collapseImport">
        <i class="arrow circle up icon "></i>Import
      </button>
    </div>
    <!-- Import button -->

    <!-- Export button -->
    <div class="col-md-2" data-toggle="tooltip" title="Export ra excel">
      <%= link_to send(path, { :format => 'xls' }), class: "ui labeled icon red button" do %>
      <i class="arrow circle down icon "></i>Export
      <% end %>
    </div>
    <!-- Export button -->
  </div>
<% end %>

<div class="collapse" id="collapseImport">
  <div class="well text-center">
    <%= form_tag send(import_path), multipart: true,
    class: "form-inline form-group" do %>
    <%= file_field_tag :file, class: "input-group btn btn-default" %>
    <%= submit_tag "Import", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
