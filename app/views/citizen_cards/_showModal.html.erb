<div class="ui small  modal scrolling" id='<%= "viewModal_#{citizen_card.id}" %>'>
  <div class="header">
    <h4 class="text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{citizen_card.id} - #{citizen_card.ground_id}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin thẻ dân cư</div>
          <div class="panel-body">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-5 control-label">Số thẻ</label>
                <div class="col-sm-7">
                  <p class="form-control-static"><%= citizen_card.card_no %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-5 control-label">Mặt bằng</label>
                <div class="col-sm-7">
                  <p class="form-control-static"><%= citizen_card.ground_name %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-5 control-label">Tình trạng</label>
                <div class="col-sm-7">
                  <p class="form-control-static"><%= citizen_card.status %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-5 control-label">Ngày tạo</label>
                <div class="col-sm-7">
                  <p class="form-control-static"><%= citizen_card.created_at.strftime("%d/%m/%Y") %></p>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>
  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Đóng<i class="remove icon"></i></div>
   </div>
 </div>
