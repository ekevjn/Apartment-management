<%= render 'layouts/sidebarnew' %>
<%= render 'layouts/topnav' %>
<div class="right_col" role="main" style="min-height: 1575px;">
  <div id="layout-messages">
    <%= render 'layouts/messages' %>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active" id="createpost_tab"><a>Tạo thông báo toàn bộ</a></li>
        <li role="presentation"  id="createmail_tab"><a>Gửi thông báo</a></li>
      </ul>
      <br>
      <div id="tab_content">
        <%= render "tab1" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#posts_tab').addClass('active');
  $('#createpost_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab1")) %>");
    $('#createpost_tab').addClass('active');
    $('#createmail_tab').removeClass('active');
  });
  $('#createmail_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab2")) %>");
    $('#createpost_tab').removeClass('active');
    $('#createmail_tab').addClass('active');
  });
</script>
