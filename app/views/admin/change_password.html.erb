<div class="container body">
  <div class="main_container">
    <%= render 'layouts/sidebaradmin' %>
    <%= render 'layouts/topnav_admin' %>
    <div class="right_col" role="main" style="min-height: 1575px;">
      <div id="layout-messages">
        <div class="container">
          <div class="row">
            <div class="col-md-10 col-md-offset-1 text-center">
              <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %>
                  <a class="close" data-dismiss="alert">&#215;</a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <div class="col-md-6 col-md-offset-3">
                  <%= form_for(@admin, url: admin_update_password_path) do |f| %>

                    <div class="form-group">
                      <%= label_tag "Mật khẩu hiện tại" %>
                      <%= password_field_tag :current_password,'',  class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.label "Mật khẩu mới" %>
                      <%= f.password_field :password, class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.label "Xác nhận mật khẩu" %>
                      <%= f.password_field :password_confirmation, class: 'form-control' %>
                    </div>

                    <div class="form-group text-center">
                      <%= f.submit "Cập nhật mật khẩu", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render 'layouts/footersubdomain' %>
  </div>
</div>
