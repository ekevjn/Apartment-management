<div class="ui segment">
  <h2 class="ui header">
    <i class="file open outline icon"></i>
    <div class="content">
      Thông tin mặt bằng <%= @ground.name %>
    </div>
  </h2>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @ground.images.size.times do |i| %>
        <% if i == 0 %>
          <li data-target="#myCarousel" data-slide-to="<%= i %>"></li>
        <% else %>
          <li data-target="#myCarousel" data-slide-to="<%= i %>" class="active"><li>
        <% end %>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% if @ground.images.present? %>
        <% @ground.images.each do |image| %>
          <% if image == @ground.images.first %>
            <div class="item active">
              <%= image_tag image.url, width: "800", height: "600", :class => "img-thumbnail", alt: "No Images" %>
            </div>
          <% else %>
            <div class="item">
              <%= image_tag image.url, width: "800", height: "600", :class => "img-thumbnail", alt: "No Images" %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="item active">
          <%= image_tag "no-image-available.jpg", width: "800", height: "600", :class => "img-thumbnail", alt: "No Images" %>
        </div>
      <% end %>
    </div>

    <% if @ground.images.present? && @ground.images.size > 1 %>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    <% end %>
  </div>
</div>
<div class="ui segment">
  <div class="ui two column middle aligned very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
          <label>Vị trí tòa nhà</label>
          <%= text_field_tag :status, @ground.building_name,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Tầng</label>
          <%= text_field_tag :status, @ground.floor,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Loại mặt bằng</label>
          <%= text_field_tag :status, @ground.kind,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Diện tích</label>
          <%= text_field_tag :status, @ground.area,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Tình trạng</label>
          <%= text_field_tag :status, @ground.status,
              class: 'form-control', disabled: true %>
        </div>
      </div>
    </div>
    <div class="column">
      <div class="ui form">
        <div class="field">
          <label>Chủ phòng</label>
          <%= text_field_tag :status, @ground.owner_name,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Số phòng</label>
          <%= text_field_tag :status, @ground.num_rooms,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Số cư dân</label>
          <%= text_field_tag :status, @ground.num_citizens,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Số thẻ cư dân</label>
          <%= text_field_tag :status, @ground.num_citizen_cards,
              class: 'form-control', disabled: true %>
        </div>
        <div class="field">
          <label>Số hưởng ưu đãi</label>
          <%= text_field_tag :status, @ground.num_water_deal,
              class: 'form-control', disabled: true %>
        </div>
      </div>
    </div>
  </div>
</div>
<hr/>
