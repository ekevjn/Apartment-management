<div class="ui modal scrolling" id='<%= "viewModal_#{vehicle_card.id}" %>'>
  <div class="header">
    <h4 class="text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{vehicle_card.id} - #{vehicle_card.license_no}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin thẻ xe</div>
          <div class="panel-body">
            <div class="col-md-5">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-md-6 control-label">Mã số thẻ</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.card_no %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Số xe</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.license_no %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Loại xe</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.vehicle_type %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Cư dân</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.citizen_name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Mặt bằng</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.ground_name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Mô tả</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.description %></p>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-5 col-md-offset-1">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-md-6 control-label">Trạng thái</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.status %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Phí tạo thẻ</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= number_to_vnd(vehicle_card.created_fee) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Ngày đăng kí</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.registered_time.strftime("%d/%m/%Y") if vehicle_card.registered_time.present? %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Tháng tính phí</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.started_time.strftime("%m/%Y")  if vehicle_card.started_time.present?%></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-md-6 control-label">Tháng hết hạn</label>
                  <div class="col-md-6">
                    <p class="form-control-static"><%= vehicle_card.outdate_time.strftime("%m/%Y")  if vehicle_card.outdate_time.present?%></p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>
  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Đóng<i class="remove icon"></i></div>
  </div>
</div>
