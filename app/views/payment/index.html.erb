<%= render 'layouts/sidebarnew' %>
<%= render 'layouts/topnav' %>
<div class="right_col" role="main" style="min-height: 1575px;">
  <div id="layout-messages">
    <%= render 'layouts/messages' %>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active" id="paymentmethod_tab"><a>Thanh toán</a></li>
        <li role="presentation" id="inputwater_tab"><a>Nhập số nước</a></li>
        <li role="presentation" id="importwater_tab"><a>Nhập số nước từ excel</a></li>
        <% if type_of_payment_day_close != ApplicationHelper::FINANCES_CLOSED %>
        <li role="presentation" id="closefinances_tab">
          <a>Chốt số tháng <%= Date.today.last_month.month %></a>
        </li>
        <% end %>
      </ul>
      <br>
      <div id="tab_content">
        <%= render "tab1" %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#payment_tab').addClass('active');

  $('#paymentmethod_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab1")) %>");
    $('#paymentmethod_tab').addClass('active');
    $('#inputwater_tab').removeClass('active');
    $('#importwater_tab').removeClass('active');
    $('#closefinances_tab').removeClass('active');
  });
  $('#inputwater_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab2")) %>");
    $('#paymentmethod_tab').removeClass('active');
    $('#inputwater_tab').addClass('active');
    $('#importwater_tab').removeClass('active');
    $('#closefinances_tab').removeClass('active');
  });
  $('#importwater_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab3")) %>");
    $('#paymentmethod_tab').removeClass('active');
    $('#inputwater_tab').removeClass('active');
    $('#importwater_tab').addClass('active');
    $('#closefinances_tab').removeClass('active');
  });
  $('#closefinances_tab').click(function(){
    $("#tab_content").html("<%= escape_javascript(render("tab4")) %>");
    $('#closefinances_tab').addClass('active');
    $('#paymentmethod_tab').removeClass('active');
    $('#inputwater_tab').removeClass('active');
    $('#importwater_tab').removeClass('active');
  });
</script>
