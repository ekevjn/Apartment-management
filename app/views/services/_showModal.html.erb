<div class="ui modal scrolling" id='<%= "viewModal_#{srvice.id}" %>'>
  <div class="header">
    <h4 class="modal-title text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{srvice.id} - #{srvice.ground_name}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin phí dịch vụ</div>
          <div class="panel-body">
            <div class="col-md-5 col-md-offset-1">
              <form class="form-horizontal">
                <!-- fix css -->
                <div class="form-group">
                  <div class="col-sm-6">
                    <p class="form-control-static"></p>
                  </div>
                </div>
                <!-- fix css -->
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mặt bằng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= srvice.ground_name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Số cư dân</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= srvice.num_citizens %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Diện tích</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= srvice.area %> m&sup2</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mức phí chung</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(srvice.price_service) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mức phí vệ sinh</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(srvice.price_hygiene) %></p>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-4">
              <form class="form-horizontal">
                <!-- fix css -->
                <div class="form-group">
                  <div class="col-sm-6">
                    <p class="form-control-static"></p>
                  </div>
                </div>
                <!-- fix css -->
                <div class="form-group">
                  <label class="col-sm-6 control-label">Nợ</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(srvice.debt) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Đã trả</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(srvice.paid) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Phí trong tháng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(srvice.fee) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Tháng tính phí</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= srvice.started_time.strftime("%m/%Y") if srvice.started_time.present? %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Hiện tại</label>
                  <div class="col-sm-6">
                    <p class="form-control-static">
                      <%= check_box_tag 'is_current', srvice.is_current,
                          srvice.is_current?, { disabled: true } %>
                    </p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>
  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Đóng<i class="remove icon"></i>
    </div>
  </div>
</div>
