<div class="ui modal scrolling" id='<%= "viewModal_#{citizen.id}" %>'>
  <div class="header">
    <h4 class="modal-title text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{citizen.id} - #{citizen.name}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin cư dân</div>
          <div class="panel-body">
            <div class="col-md-5">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-sm-6 control-label">Tên</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mặt bằng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.ground.name if citizen.ground_id %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Email</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.email %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Giới tính</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= (citizen.gender == 1 ? 'Nam' : 'Nữ') %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Chứng minh thư</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.government_id %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Điện thoại</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.phone %></p>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-5 col-md-offset-1">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-sm-6 control-label">Ngày sinh</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.dob.strftime("%d/%m/%Y") if citizen.dob %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Quê quán</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.hometown %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Quốc tịch</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.nationality %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Ưu đãi nước</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= check_box_tag 'is_water_deal', citizen.is_water_deal,
                      citizen.is_water_deal?, { disabled: true } %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Hoạt động</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.active_text %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Ngày tham gia</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= citizen.created_at.strftime("%d/%m/%Y") %></p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>

  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Đóng<i class="remove icon"></i>
    </div>
  </div>
</div>
