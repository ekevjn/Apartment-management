<div class="ui segment">
  <%= form_tag(open_vehicle_card_setcard_index_path, remote: true) do  %>
    <h2 class="ui header">
      <i class="block layout icon"></i>
      <div class="content">Mở dịch vụ thẻ xe</div>
    </h2>
    <div class="row">
      <div class="col-md-6">
        <label>Tên mặt bằng (*)</label>
          <%= text_field_tag :ground_name_search, '', class: 'form-control',
            :id => "vehicle_card_search_add", placeholder:"Nhập tên mặt bằng"  %>
          <%= hidden_field_tag "ground_id", '', id: "vehicle_card_id_add" %>
        <br/>
        <%= submit_tag('Thực hiện' , class: 'ui green button') %>
      </div>
    </div>
  <% end %>
  <br>
  <div class="row" >
    <div class=" col-md-12" id="open_vehicle_card">
    </div>
  </div>
</div>

<!-- Modal thong bao thanh cong -->
<div class="ui basic modal" id="open_service_success">
  <i class="close icon"></i>
  <div class="header">
    Thành công
  </div>
  <div class="image content">
    <div class="image">
      <i class="checkmark icon"></i>
    </div>
    <div class="description">
      <p><div>Mở dịch vụ thẻ xe thành công</div></p>
    </div>
  </div>
  <div class="actions">
    <div class="two fluid ui inverted buttons">
      <div class="ui ok green basic inverted button">
        <i class="checkmark icon"></i>
        Cảm ơn
      </div>
    </div>
  </div>
</div>
<!-- Modal thong bao thanh cong -->

<!-- Modal thong bao that bai -->
<div class="ui basic modal" id="open_service_failed">
  <i class="close icon"></i>
  <div class="header">
    Thất bại
  </div>
  <div class="image content">
    <div class="image">
      <i class="remove icon"></i>
    </div>
    <div class="description">
      <p><div>Mặt bằng này chưa có chủ hộ, không thể mở dịch vụ</div></p>
    </div>
  </div>
  <div class="actions">
    <div class="two fluid ui inverted buttons">
      <div class="ui ok green basic inverted button">
        <i class="checkmark icon"></i>
        Cảm ơn
      </div>
    </div>
  </div>
</div>
<!-- Modal thong bao that bai -->

<script type="text/javascript">
  // autocomplete ground name
  $("#vehicle_card_search_add").autocomplete({
    source: '/grounds/autocomplete.json',
    select: function( event, ui ) {
      $( "#vehicle_card_search_add" ).val( ui.item.value );
      $( "#vehicle_card_id_add" ).val( ui.item.key );
      return false;
    },
    messages: {
      noResults: '',
      results: function() {}
    },
    change: function (event, ui) {
      if (ui.item == null || ui.item == undefined) {
        $("#vehicle_card_search_add").val("");
        $("#vehicle_card_id_add").val("");
        $("#vehicle_card_search_add").attr("disabled", false);
      }
    }
  });
</script>
