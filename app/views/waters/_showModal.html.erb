<div class="ui modal scrolling" id='<%= "viewModal_#{water.id}" %>'>
  <div class="header">
    <h4 class="modal-title text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{water.id} - #{water.ground_name}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin tiền nước</div>
          <div class="panel-body">
            <div class="col-md-4 col-md-offset-2">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mặt bằng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= water.ground_name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Chỉ số nước</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= water.water_no %></p>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-6 control-label">Số ưu đãi</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= water.num_water_deal %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mức 1 (0 - 4)</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.price_water_lv1) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mức 2 (4 - 6)</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.price_water_lv2) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mức 3 ( > 6)</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.price_water_lv3) %></p>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-4">
              <form class="form-horizontal">
                <div class="form-group">
                  <label class="col-sm-6 control-label">Khối nước</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= water.water_num %> m&sup3</p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Nợ</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.debt) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Đả trả</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.paid) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Phí trong tháng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(water.fee) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Tháng tính phí</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= water.started_time.strftime("%m/%Y") %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Hiện tại</label>
                  <div class="col-sm-6">
                    <p class="form-control-static">
                      <%= check_box_tag 'is_current', water.is_current,
                            water.is_current?, { disabled: true } %>
                    </p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>
  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Đóng<i class="remove icon"></i>
    </div>
  </div>
</div>
