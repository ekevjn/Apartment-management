<div class="ui small modal scrolling" id='<%= "viewModal_#{building.id}" %>'>
      <div class="header">
        <h4 class="text-center h1">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
          <%= "#{building.id} - #{building.name}" %>
        </h4>
      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-primary">
              <div class="panel-heading text-center">Thông tin tòa nhà</div>
              <div class="panel-body">
                <form class="form-horizontal">
                  <div class="form-group">
                    <label class="col-sm-5 control-label">Tòa nhà</label>
                    <div class="col-sm-7">
                      <p class="form-control-static"><%= building.name %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-5 control-label">Số tầng</label>
                    <div class="col-sm-7">
                      <p class="form-control-static"><%= building.num_floors %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-5 control-label">Hoạt động</label>
                    <div class="col-sm-7">
                      <p class="form-control-static"><%= building.active_text %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-5 control-label">Ngày tạo</label>
                    <div class="col-sm-7">
                      <p class="form-control-static"><%= building.created_at.strftime("%d/%m/%Y") %></p>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div> <!-- end modal body -->
      </div>
      <div class="actions">
        <div class="ui negative right labeled icon button" >
         Đóng<i class="remove icon"></i></div>
      </div>
</div>
