<% building = @building if @building %>
<%= form_for(building, remote: true,
html: {role: :form, 'data-model' => 'building'}) do |f| %>
  <div class="ui grid">
    <div class="sixteen wide column">
      <div class="panel panel-primary">
        <div class="panel-heading text-center">Thông tin tòa nhà</div>
        <div class="panel-body">
          <div class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-3 control-label">Tòa nhà (*)</label>
              <div class="col-sm-9">
                <%= f.text_field :name, class: 'form-control' %>
                <span class="help-block"></span>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label">Số tầng (*)</label>
              <div class="col-sm-9">
                <%= f.text_field :num_floors, class: 'form-control' %>
                <span class="help-block"></span>
              </div>
            </div>
            <% if !building.new_record? && building.del_flg == 1  %>
            <div class="form-group">
              <label class="col-sm-3 control-label">Đang hoạt động</label>
              <div class="col-sm-9">
                <div class="checkbox">
                  <label>
                    <%= f.check_box :active %>
                  </label>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="right floated four wide column actions">
      <div class="ui negative button" >Hủy</div>
      <%= f.submit(building.new_record? ? 'Tạo' : 'Lưu', class: 'ui green button') %>
    </div>
  </div>
<% end %>
