<div class="ui modal scrolling" id='<%= "viewModal_#{vehicle_finance.id}" %>'>
  <div class="header">
    <h4 class="text-center h1">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true" style="color:blue"></span>
      <%= "#{vehicle_finance.id} - #{vehicle_finance.vehicle_card.card_no}" %>
    </h4>
  </div>
  <div class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">Thông tin phí giữ xe</div>
          <div class="panel-body">
            <div class="col-md-5 col-md-1">
              <form class="form-horizontal">
                <!-- fix css -->
                <div class="form-group">
                  <div class="col-sm-6">
                    <p class="form-control-static"></p>
                  </div>
                </div>
                <!-- fix css -->
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mã thẻ xe</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= vehicle_finance.card_no %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Số xe</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= vehicle_finance.vehicle_card.license_no %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Mặt bằng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= vehicle_finance.ground_name %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Hiện tại</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= check_box_tag 'is_current', vehicle_finance.is_current,
                      vehicle_finance.is_current?, { disabled: true } %></p>
                  </div>
                </div>
                <!-- fix css -->
                <div class="form-group">
                  <div class="col-sm-6">
                    <p class="form-control-static"></p>
                  </div>
                </div>
                <!-- fix css -->
              </form>
            </div>
            <div class="col-md-5">
              <form class="form-horizontal">
                <!-- fix css -->
                <div class="form-group">
                  <div class="col-sm-6">
                    <p class="form-control-static"></p>
                  </div>
                </div>
                <!-- fix css -->
                <div class="form-group">
                  <label class="col-sm-6 control-label">Nợ</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(vehicle_finance.debt) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Đã trả</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(vehicle_finance.paid) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Phí trong tháng</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= number_to_vnd(vehicle_finance.fee) %></p>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-6 control-label">Tháng tính phí</label>
                  <div class="col-sm-6">
                    <p class="form-control-static"><%= vehicle_finance.started_time.strftime("%m/%Y") %></p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- end modal body -->
  </div>
  <div class="actions">
    <div class="ui negative right labeled icon button" >
     Close<i class="remove icon"></i></div>
  </div>
</div>
